        <button id="btn_delete" class="numbers DEL">DEL</button>
        <button id="btn_+/-" class="numbers">+/-</button>
        <button id="btn_%" class="numbers">%</button>

   
    
        </div>
        
        <div class = "buttons2">

            <button id="btn_7" class="numbers">7</button>
